<fest:template xmlns:fest="http://fest.mail.ru">
    <div id="login" class="wrap">
        <div class="wrap__layout">
            <div class="logo">
                <img src="/media/bomb_logo.png"></img>
            </div>
            <div class="menu">
                <div class="menu__title">
                    Login
                </div>
                <div class="form">
                    <form name="authentication">
                        <input name="login"  class="text-input" placeholder="Login" id="login-input"></input>
                        <input name="password" type="password" placeholder="Password" class="text-input" id="password-input"></input>
                        <input type="submit" class="submit-input" value="Login" id='sign-in'></input>
                    </form>
                </div>
                <a href="#main"><button class="menu__btn  menu__btn_back">
                    Back
                </button></a>
            </div>
        </div>
        <div class="alert-box error" style="display: none"></div>
    </div>
</fest:template>